<!-- Header with dark gray background and light text -->





<header class="primary-header container" style="background-color: #1A1A19;">
  <nav class="primary-navigation">
    <ul role="list" class="nav-list">
      <li><a href="/" style="color: #F6FCDF;">Home</a></li>
      <li><a href="/menu" style="color: #F6FCDF;">Medicines</a></li>
    </ul>
  </nav>
  <div class="icons">
    <a href="/menu/search" class="icon-hover" style="color: #F6FCDF;">
      <i class="fa-solid fa-magnifying-glass icon"></i>
    </a>
    <% if(user){ %>
      <div class="profile">
        <div id="profileBtn" class="icon-hover" style="color: #F6FCDF;">
          <i class="fa-solid fa-user icon"></i>
        </div>
        <div class="profile__menu">
          <ul role="list" class="menu__list">
            <li><a href="#" style="color: #31511E;"><%= user.name %></a></li>
            <li><a href="/orders" style="color: #31511E;">Orders</a></li>
            <li><a href="/user/logout" style="color: #31511E;">Logout</a></li>
          </ul>
        </div>
      </div>
      <a href="/cart" class="cart icon-hover" style="color: #F6FCDF;">
        <i class="fa-solid fa-cart-shopping icon"></i>
        <% if(cart) {%>
          <span class="cart__count" id="cartCount" style="color: #F6FCDF;"> <%= cart.items.length %> </span>
        <% } else { %>
          <span class="cart__count" id="cartCount" style="color: #F6FCDF;">0</span>
        <% } %>
      </a>
    <% } else { %>
      <a href="/user/login" class="login__btn" style="color: #1A1A19; background-color: #859F3D;">Login</a>
    <% } %>
  </div>
</header>

<main>
  <!-- Hero Section with medium green CTA button -->
  <section class="container" style="background-color: #F6FCDF;">
    <div class="even-columns hero-space">
      <div class="content">
        <h1 class="hero-title" style="color: #31511E;">On-Demand Drone Delivery</h1>
        <p class="hero__tagline" style="color: #333;">
          Get your essentials delivered quickly and easily with our drone-powered service.
        </p>
        <a href="/menu" class="button hero-cta" style="background-color: #18cc30; color: #F6FCDF;">Order Medicines </a>
      </div>
      <div class="image">
        <img src="/img/front.png" class="hero-image" alt="Drone" width="600" height="400" />

      </div>
    </div>
  </section>

  <!-- Category Section with dark green title and medium green buttons -->
